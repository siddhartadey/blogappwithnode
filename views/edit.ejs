<% include hf/header %>
<h1 class="text-center">Edit <%= post.title %></h1>
<div style="width: 30%;margin: 0 auto;">
    <form action="/post/<%= post._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="post[img]" value="<%= post.img %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="post[disc]" value="<%= post.disc %>">
        </div>
        <button class="btn btn-success">Edit</button>
    </form>
</div>
<% include hf/footer %>